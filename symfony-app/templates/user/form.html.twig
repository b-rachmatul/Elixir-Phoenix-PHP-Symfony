{# templates/user/form.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">{{ is_edit ? 'Edytuj dane użytkownika' : 'Dodaj nowego użytkownika' }}</h5>
                </div>
                <div class="card-body p-4">
                    {{ form_start(form) }}
                        <div class="mb-3">
                            <label class="form-label fw-bold small">Imię</label>
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.firstName) }}
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold small">Nazwisko</label>
                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.lastName) }}
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold small">Płeć</label>
                                {{ form_widget(form.gender, {'attr': {'class': 'form-select'}}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold small">Data urodzenia</label>
                                {{ form_widget(form.birthDate, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="{{ path('user_index') }}" class="btn btn-link text-muted text-decoration-none">Anuluj</a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-check-lg me-1"></i>Zapisz użytkownika
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}